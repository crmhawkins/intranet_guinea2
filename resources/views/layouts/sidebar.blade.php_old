<script>

    // Cambia el Sidebar
    $("#bars").on("click", function(e){
        $("#sidebar").animate({left: 0}, 200);
        setTimeout(function() {
            $("#bars").hide();
            }, 200);

    } )
    $("#cerrarSidebar").on("click", function(e){
        e.preventDefault()
        $("#sidebar").animate({left: "-100%"}, 200);
        $("#bars").show();

    } )

</script>
